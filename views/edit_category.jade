extends layout

block content
    .spacer
    .container
        .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            h1= title
            form(method='post', action='/categories/edit')
                .form-group
                    label Title:
                    input.form-control(name='title', type='text')
                .form-group
                    label Description:
                    textarea.form-control(name='description', id='body', rows='8')

                        if description
                            =description

            input.btn.btn-primary(name='submit', type='submit', value='Save')
            a(class='btn btn-default' href='/manage/categories') Back